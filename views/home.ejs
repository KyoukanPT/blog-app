<%- include("partials/header"); %>

    <h1>
        <%= home %>
    </h1>

    <p>
        <%= homeStartingContent %>
    </p>

    <% posts.forEach((post) => { %>
        <h1>
            <%= post.title %>
        </h1>
        <p>
            <%= post.content.substring(0, 100) + "..." %> <a href="/posts/<%=post._id%>">Read More</a>
        </p>
        <% }) %>

            <%- include("partials/footer"); %>